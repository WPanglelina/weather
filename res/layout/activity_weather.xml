<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pei.weather.activity.WeatherActivity" >

    <TextView
        android:id="@+id/weather_tmp_top_invisable"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:gravity="left"
        android:text="26"
        android:textColor="#ffffff"
        android:textSize="100sp"
        android:visibility="invisible" />

    <com.pei.weather.ui.SuperScrollView
        android:id="@+id/weather_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/weather_today_layout"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:background="#053C7D"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/weather_city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:gravity="center_horizontal"
                    android:text="北京市"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/weather_status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="晴"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/weather_tmp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="26"
                    android:textColor="#ffffff"
                    android:textSize="100sp" />

                <TextView
                    android:id="@+id/weather_airlevel"
                    android:layout_width="80dp"
                    android:layout_height="25sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="68 良"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="165dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/weather_day0"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="昨天"
                        android:textColor="#cfcfcf" />

                    <TextView
                        android:id="@+id/weather_img0"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/sun"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/weather_tmp0"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="27/9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/weather_day1"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="今天"
                        android:textColor="#cfcfcf" />

                    <TextView
                        android:id="@+id/weather_img1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/duoyun"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/weather_tmp1"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="27/9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/weather_day2"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="明天"
                        android:textColor="#cfcfcf" />

                    <TextView
                        android:id="@+id/weather_img2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/duoyun"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/weather_tmp2"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="27/9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/weather_day3"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="周五"
                        android:textColor="#cfcfcf" />

                    <TextView
                        android:id="@+id/weather_img3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/sun"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/weather_tmp3"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="27/9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/weather_day4"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="周六"
                        android:textColor="#cfcfcf" />

                    <TextView
                        android:id="@+id/weather_img4"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/xiayu"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/weather_tmp4"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="27/9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/weather_day5"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="周日"
                        android:textColor="#cfcfcf" />

                    <TextView
                        android:id="@+id/weather_img5"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/xiayu"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/weather_tmp5"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="27/9" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="115dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp" >

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="空气质量"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/airlevel_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/airlevel_num"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="19"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="PM2.5 μg/㎥"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/pm25_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="8dp"
                            android:text="12"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/pm25_view_back"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#ededed" />

                        <TextView
                            android:id="@+id/pm25_view"
                            android:layout_width="30dp"
                            android:layout_height="5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#4499ff" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="PM10 μg/㎥"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/pm10_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="8dp"
                            android:text="15"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/pm10_view_back"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#ededed" />

                        <TextView
                            android:id="@+id/pm10_view"
                            android:layout_width="30dp"
                            android:layout_height="5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#4499ff" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="空气质量超过全国99%的地区" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="360dp"
                android:background="#FAFAFA"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="165dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="5dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:background="@drawable/wind"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/winddirec"
                                android:layout_width="78dp"
                                android:layout_height="wrap_content"
                                android:text="西北风" />

                            <TextView
                                android:id="@+id/windpower"
                                android:layout_width="78dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="西北风" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:background="#cfcfcf" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="5dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:background="@drawable/sunrise_sunset"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/sunrise"
                                android:layout_width="78dp"
                                android:layout_height="wrap_content"
                                android:text="05:00" />

                            <TextView
                                android:id="@+id/sunset"
                                android:layout_width="78dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="19:00" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#cfcfcf" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="165dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="5dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:background="@drawable/humidness"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/humidness"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="16%" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:background="#ededed" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="5dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:background="@drawable/sendible_temp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/bodytemp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="18" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="#cfcfcf" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/sport_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:drawableTop="@drawable/sport"
                                android:gravity="center"
                                android:text="运动指数"
                                android:textColor="#cfcfcf" />

                            <TextView
                                android:id="@+id/sport_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="较适宜" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/washcar_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:drawableTop="@drawable/washcar"
                                android:gravity="center"
                                android:text="洗车指数"
                                android:textColor="#cfcfcf" />

                            <TextView
                                android:id="@+id/washcar_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="较适宜" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/uv_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:drawableTop="@drawable/glass"
                                android:gravity="center"
                                android:text="紫外线指数"
                                android:textColor="#cfcfcf" />

                            <TextView
                                android:id="@+id/uv_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="强" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/flu_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:drawableTop="@drawable/flu"
                                android:gravity="center"
                                android:text="感冒指数"
                                android:textColor="#cfcfcf" />

                            <TextView
                                android:id="@+id/flu_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="适宜" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/spf_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:drawableTop="@drawable/umbrella"
                                android:gravity="center"
                                android:text="防嗮指数"
                                android:textColor="#cfcfcf" />

                            <TextView
                                android:id="@+id/spf_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="强" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/travel_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:drawableTop="@drawable/trav"
                                android:gravity="center"
                                android:text="旅行指数"
                                android:textColor="#cfcfcf" />

                            <TextView
                                android:id="@+id/travel_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="适宜" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cloth_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:drawableTop="@drawable/cloth"
                                android:gravity="center"
                                android:text="穿衣指数"
                                android:textColor="#cfcfcf" />

                            <TextView
                                android:id="@+id/cloth_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="舒适" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/comfort_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:drawableTop="@drawable/coffee"
                                android:gravity="center"
                                android:text="舒适指数"
                                android:textColor="#cfcfcf" />

                            <TextView
                                android:id="@+id/comfort_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="较舒适" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <TextView
                                android:id="@+id/detail_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="right"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/sport"
